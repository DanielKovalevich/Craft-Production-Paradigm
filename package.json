{
  "name": "supply-chain-simulation",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "client": "npm-run-all --parallel compile",
    "start": "npm-run-all --parallel compile database dev",
    "start-win": "npm-run-all --parallel compile database-win dev",
    "database": "mongod --dbpath=./data --fork --logpath /dev/null",
    "database-win": "mongod --dbpath=./data",
    "compile": "tsc --watch --skipLibCheck",
    "dev": "nodemon dist/server.js --watch",
    "stop": "mongo admin --eval 'db.shutdownServer()' > /dev/null",
    "pretest": "mongod --dbpath data --fork --logpath /dev/null",
    "test": "mocha test",
    "posttest": "mongo admin --eval 'db.shutdownServer()' > /dev/null"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DanielKovalevich/Supply-Chain-Simulation.git"
  },
