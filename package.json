  "dependencies": {
    "@types/es6-shim": "^0.31.37",
    "@types/express": "^4.11.1",
    "@types/node": "^10.0.8",
    "express": "^4.16.3",
    "mongodb": "^3.1.0-beta4",
    "mongoose": "^5.1.0",
    "npm-run-all": "^4.1.3",
