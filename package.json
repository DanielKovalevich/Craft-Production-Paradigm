  },
  "homepage": "https://github.com/DanielKovalevich/Supply-Chain-Simulation#readme",
  "dependencies": {
    "@types/es6-shim": "^0.31.37",
    "@types/express": "^4.11.1",
    "@types/mongoose": "^5.0.13",
    "@types/node": "^10.0.8",
    "eslint": "^4.19.1",
    "express": "^4.16.3",
    "mongodb": "^3.1.0-beta4",
    "mongoose": "^5.1.0",
    "npm-run-all": "^4.1.3",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@types/three": "^0.91.14",
    "copyfiles": "^2.0.0",
